@startuml eliminarInvestigador

skinparam linetype polyline

state in1 as "PROYECTOS_ABIERTOS"
in1 -[#green]-> eliminarInvestigador
note on link
abrirProyecto()
end note

state eliminarInvestigador as "eliminarInvestigador()" {

    state " " as ConfirmandoEliminacion
    state " " as PublicacionEliminada

    [*] -[#green]-> ConfirmandoEliminacion
    note on link
    <b>Coordinador</b> solicita eliminar investigador de proyecto
    end note

    ConfirmandoEliminacion -[#green]-> PublicacionEliminada
    note on link
    <b>Sistema</b> presenta confirmación de eliminación
    <b>Coordinador</b> solicita confirmar eliminación
    <b>Sistema</b> presenta la eliminación del investigador
    end note

    ConfirmandoEliminacion -[#red]-> [*]
    note on link
    <b>Coordinador</b> solicita cancelar la operación
    end note

    PublicacionEliminada -[#green]-> [*]
    note on link
    <b>Sistema</b> presenta confirmación de eliminación
    end note
}


eliminarInvestigador -[#blue]-> PROYECTOS_ABIERTOS
note on link
abrirProyecto()
end note


eliminarInvestigador -[#blue]-> ENTREGABLES_ABIERTOS
note on link
abrirEntregables()
end note












@enduml
