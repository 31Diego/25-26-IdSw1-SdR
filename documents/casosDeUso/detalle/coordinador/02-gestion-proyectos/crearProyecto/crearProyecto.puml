end note

crearProyecto -[#green]-> INVESTIGADORES_ABIERTOS
note on link
abrirInvestigadores()
end note

crearProyecto -[#green]-> PROYECTOS_ABIERTOS
note on link
abrirProyectos()
end note

@enduml