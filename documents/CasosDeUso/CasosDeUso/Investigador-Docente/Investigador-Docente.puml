@startuml CU_Investigador
title Casos de uso del Investigador / Docente-Investigador

left to right direction
actor "Investigador /\nDocente-Investigador" as Inv

rectangle "Plataforma FUNIBER" {

  rectangle "Gestión de Perfil y Carga" {
    usecase "GestionarPerfil()" as CU_GestionarPerfil
    usecase "ConsultarCargaAcademica()" as CU_ConsultarCarga
    usecase "SolicitarCompensacion()" as CU_SolicitarComp
  }

  rectangle "Participación en Convocatorias" {
    usecase "ConsultarConvocatoriasAsignadas()" as CU_ConsultarConv
  }

  rectangle "Participación en Proyectos" {
    usecase "ConsultarMisProyectos()" as CU_ConsultarProyectos
    usecase "SubirEntregable()" as CU_SubirEntregable
    usecase "ConsultarEstadoEntregable()" as CU_ConsultarEstado
  }

}

Inv --> CU_GestionarPerfil
Inv --> CU_ConsultarCarga
Inv --> CU_SolicitarComp
Inv --> CU_ConsultarConv
Inv --> CU_ConsultarProyectos
Inv --> CU_SubirEntregable
Inv --> CU_ConsultarEstado

@enduml